#TMUX integration
export FZF_DEFAULT_OPTS="--height=80% --layout=reverse --border --preview-window=right:60%"
export FZF_TMUX_OPTS="-p 80%,80%"

export FZF_CTRL_T_OPTS="--preview 'bat -n --color=always --line-range :500 {}'"
export FZF_ALT_C_OPTS="--preview 'eza --tree --color=always {} | head -200'"

_fzf_comprun() {
  local command=$1
  shift

  case "$command" in
    cd) fzf-tmux -p --preview 'eza --tree --color=always {} | head -200' "$@" ;;
    z) fzf-tmux -p --preview 'eza --tree --color=always {} | head -200' "$@" ;;
    export|unset) fzf-tmux -p --preview "eval 'echo \$' {}" "$@" ;;
    ssh) fzf-tmux -p --preview 'dig {}' "$@" ;;
    *) fzf-tmux -p --preview "--preview 'bat -n --color=always --line-range :500 {}'" "$@" ;;
  esac
}

_fzf_compgen_path() {
  fd --hidden --exclude .git . "$1"
}

_fzf_compgen_dir() {
  fd --type=d --hidden --exclude .git . "$1"
}

